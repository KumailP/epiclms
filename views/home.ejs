      <script type="text/javascript">
        $(function(){
          if($(".courses-sec").children("a").length === 0){
              //$('#course-ul').append('<p>No courses yet!</p>');
              $('.courses-sec').append('<p>It seems like you have not enrolled in any courses yet,<a href="/manage-course">click here to enroll!</a></p>');
